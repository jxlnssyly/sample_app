<h1>All users</h1>
<ul class="users">	
	<%= form_tag bdel_path, method: :delete do%>
		<%= submit_tag "删除选中" %>
		<table>
			<% @users.each do |user| %>
				<tr>
					<td>
						<% if user.id != 1 %>
							<%= check_box_tag "user_ids[]", user.id %>
						<% end -%>
						<%= user.name %>
					</td>
				</tr>
			<% end -%>
		</table>
	<% end -%>
</ul>